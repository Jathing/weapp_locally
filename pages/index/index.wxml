<view>

  <!-- 轮播图配置 -->
  <swiper class="slides" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="unique">
      <swiper-item>
        <image src="{{item.image}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>

  <view class="grids">
    <view class="item" wx:for="{{gridsList}}" wx:key="unique">
      <image src="{{item.icon}}" />
      <text>{{item.name}}</text>
    </view>
  </view>

  <view class="links">
    <image src="../../assets/link-01.png"></image>
    <image src="../../assets/link-02.png"></image>
  </view>

</view>